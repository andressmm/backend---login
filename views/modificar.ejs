<%- include('parcials/header')%>
<div class="body__container">


    <div class="login__container">
        <div class="login">
    <form method="POST" action="/modificar?_method=PATCH">
        <h2>MODIFICAR EVENTO</h2>
            <div class="input-container">
                <label for="nombre_evento">Evento:</label>
                <input type="text" id="nombre_evento" name="nombre_evento" required value="<%= registro.nombre_evento %>">
            </div>
            <div class="input-container">
                <label for="tipo_evento">Tipo de evento:</label>
                <input type="text" id="tipo_evento" name="tipo_evento" required value="<%= registro.tipo_evento %>">
            </div>
            <div class="input-container">
                <label for="fecha_evento">Fecha:</label>
                <input type="date" id="tipo_evento" name="fecha_evento" required value="<%= registro.fecha_evento %>">
            </div>
            <input type="hidden" name="idActualizar" value="<%= registro.id_evento %>">
      
            <button type="submit">Guardar cambios</button>
        </form>
            </div>
        </div>

</div>

